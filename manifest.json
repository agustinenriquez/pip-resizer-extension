{
    "manifest_version": 3,
    "name": "Custom PiP Resizer",
    "version": "1.0",
    "description": "Forces a custom width and height on Picture-in-Picture mode.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["*://*/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ]
}
  