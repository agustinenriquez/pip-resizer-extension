{
  "manifest_version": 3,
  "name": "Vertical Video Converter",
  "version": "1.1",
  "description": "Convert horizontal videos into vertical format and send them to Picture-in-Picture mode.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "activate-pip": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Activate PiP Resizer"
    }
  },
  "options_page": "options.html"
}
